extends base.pug 

block content
  if errorMessage 
    p=errorMessage
  form(method="POST")
    input(type="text", requried, placeholder="userName", name="username")
    input(type="password", requried, placeholder="Password", name="password")
    input(type="submit", value="Login")
  hr
  div 
    span Don't have an account?
    a(href="/join") Create in now &rarr;