extends ../base
include ../mixins/video

block content 
  div.profile_data
    if !user.avatarUrl
      i.far.fa-user
    else 
      if user.avatarUrl.startsWith("upload")
        img(src=`/${user.avatarUrl}`, crossorigin).header__avatar
      if user.avatarUrl.startsWith("http")
        img(src=user.avatarUrl, crossorigin).header__avatar
    h3=user.name
  div.video-grid
    each potato in user.videos 
      +video(potato)
    else 
      span.empty__message No videos found