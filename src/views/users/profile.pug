extends ../base
include ../mixins/video

block content 
  div.profile_data
    if loggedInUser.avatarUrl.startsWith("upload")
      img(src=`/${loggedInUser.avatarUrl}`, crossorigin).avatar
    if loggedInUser.avatarUrl.startsWith("http")
      img(src=loggedInUser.avatarUrl, crossorigin).avatar
    h3=user.name
  div.video-grid
    each potato in user.videos 
      +video(potato)
    else 
      span.empty__message No videos found