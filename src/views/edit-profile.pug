extends base

block content
  if errorMessage 
    p=errorMessage
  form(method="POST", enctype="multipart/form-data").edit-profile__form
    label(for="avatar") Avatar
    input(type="file", id="avatar", name="avatar",accept="image/*")
    input(type="text", value=loggedInUser.name, placeholder="name",name="name", requried)
    input(type="email", value=loggedInUser.email,placeholder="email",name="email", requried)
    input(type="text", value=loggedInUser.username placeholder="username",name="username", requried)
    input(type="text", value=loggedInUser.location, placeholder="location",name="location") 
    input(type="submit", value="Edit Profile")  
    if !loggedInUser.socialOnly
      div.edit-profile__password
        a(href="change-password") Change Password  &rarr;