extends base.pug

block content
  if errorMessage
      p=errorMessage
  form(method="POST")
    input(type="text", requried, placeholder="Name", name="name")
    input(type="email", requried, placeholder="Email", name="email")
    input(type="text", requried, placeholder="userName", name="username")
    input(type="password", requried, placeholder="Password", name="password")
    input(type="password", requried, placeholder="Confirm Password", name="password2")
    input(type="text", requried, placeholder="Location", name="location")
    input(type="submit", value="Join")
    include partials/social-login.pug
  div.auth-switch
    span Already have an account?
    a(href="/login") Login in now &rarr;